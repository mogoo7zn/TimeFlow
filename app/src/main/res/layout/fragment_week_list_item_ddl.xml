<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ddl_layout"
    android:layout_marginTop="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/day_deadline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="0dp"
        android:background="@color/deadline"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/day_deadline_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        android:textSize="10sp"
        android:textColor="@color/deadline_label"
        android:background="@drawable/deadline_label"
        app:layout_constraintBottom_toBottomOf="@id/day_deadline"
        app:layout_constraintStart_toStartOf="@id/day_deadline"
        app:layout_constraintTop_toTopOf="@id/day_deadline"
        app:layout_constraintEnd_toEndOf="@id/day_deadline"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>



