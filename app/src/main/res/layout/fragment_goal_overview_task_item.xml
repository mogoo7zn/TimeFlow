<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_task"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"/>

    <CheckBox
        android:id="@+id/importance_flag"
        style="@style/TabButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:drawableTop="@drawable/ic_flag_task_importance_selector"
        app:layout_constraintStart_toEndOf="@id/task_name"
        app:layout_constraintBottom_toBottomOf="@id/task_name"
        android:layout_marginStart="4dp"/>.

    <TextView
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/task_name"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/dark_grey"
        android:textSize="11sp"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="@string/task_description"/>.

    <TextView
        android:id="@+id/task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/task_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="12dp"
        android:text="@string/task_time"
        android:textColor="@color/dark_grey"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/task_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/task_description"
        app:layout_constraintStart_toEndOf="@id/task_time"
        android:layout_marginTop="3dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="2dp"
        android:text="@string/task_place"
        android:textColor="@color/dark_grey"
        android:textSize="11sp"/>

    <ImageView
        android:id="@+id/task_tomato_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/task_name"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_tomato"/>.


</androidx.constraintlayout.widget.ConstraintLayout>