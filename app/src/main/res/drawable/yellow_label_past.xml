<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/yellow_label_line" />

            <corners android:topLeftRadius="5dp"
                android:bottomLeftRadius="5dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/yellow_label_bg" />
            <corners android:topLeftRadius="5dp"
                android:bottomLeftRadius="5dp"/>
        </shape>
    </item>
</layer-list>